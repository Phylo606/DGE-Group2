<Window x:Class="DGE_Group_2_WPF_Wireframe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DGE_Group_2_WPF_Wireframe"
        mc:Ignorable="d"
        Title="DGE Attendence Tracker" Height="450" Width="800">
    <Grid Background="LightGray">
        <!--<Button x:Name="Time_Entered" Content="Time Entered" HorizontalAlignment="Left" Margin="24,28,0,0" VerticalAlignment="Top" Width="223" Click="Button_Click" Height="50" FontSize="16"/>
        <Button Content="Time Left" HorizontalAlignment="Left" Margin="281,28,0,0" VerticalAlignment="Top" Width="222" Height="50" FontSize="16"/>
