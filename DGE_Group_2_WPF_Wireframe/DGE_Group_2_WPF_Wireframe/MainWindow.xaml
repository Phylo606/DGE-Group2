        <Label Content="User ID" HorizontalAlignment="Left" Margin="133,113,0,0" VerticalAlignment="Top" Width="69" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Height="31" Margin="220,113,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="127" FontSize="16"/>
        <Label Content="Room" HorizontalAlignment="Left" Margin="144,185,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="1.173,2.18"/>
        <TextBox HorizontalAlignment="Left" Height="31" Margin="220,185,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="127" FontSize="16"/>
